{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-07-09/server.schema.json",
  "name": "io.github.democratize-technology/vikunja-mcp",
  "description": "Model Context Protocol server for Vikunja task management",
  "status": "active",
  "repository": {
    "url": "https://github.com/democratize-technology/vikunja-mcp",
    "source": "github"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registry_type": "npm",
      "registry_base_url": "https://registry.npmjs.org",
      "identifier": "vikunja-mcp",
      "version": "1.0.4",
      "transport": {
        "type": "stdio"
      },
      "environment_variables": [
        {
          "description": "Vikunja instance URL",
          "is_required": true,
          "format": "string",
          "is_secret": false,
          "name": "VIKUNJA_URL"
        },
        {
          "description": "Vikunja API token",
          "is_required": true,
          "format": "string",
          "is_secret": true,
          "name": "VIKUNJA_API_TOKEN"
        },
        {
          "description": "Transport type: 'stdio' for stdio transport (default when run via npx), 'http' or 'sse' for HTTP transport on port 3000 (default when run directly)",
          "is_required": false,
          "format": "string",
          "is_secret": false,
          "name": "MCP_TRANSPORT"
        }
      ]
    }
  ]
}
