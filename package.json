{
  "name": "@democratize-technology/vikunja-mcp",
  "version": "0.2.0",
  "description": "Model Context Protocol server for Vikunja task management - Simplified architecture with enterprise-grade security and reliability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vikunja-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node --max-old-space-size=4096 ./node_modules/typescript/bin/tsc",
    "test": "jest --silent",
    "test:watch": "jest --watch --silent",
    "test:coverage": "jest --coverage --silent",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --config eslint.config.mjs",
    "format:src": "prettier --write 'src/**/*.ts'",
    "format:tests": "prettier --write 'tests/**/*.ts'",
    "format": "npm run format:src && npm run format:tests",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "mcp",
    "vikunja",
    "task-management",
    "model-context-protocol",
    "ai-assistant",
    "todo",
    "productivity",
    "automation"
  ],
  "author": "Jeremy Green",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/democratize-technology/vikunja-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/democratize-technology/vikunja-mcp/issues"
  },
  "homepage": "https://github.com/democratize-technology/vikunja-mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "async-mutex": "^0.5.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "jsonata": "^2.1.0",
    "node-vikunja": "^0.4.0",
    "object-sizeof": "^2.6.5",
    "opossum": "^9.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.3.0",
    "@types/opossum": "^8.1.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-plugin-jest": "^29.0.1",
    "fast-check": "^4.3.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "markdown-it": "^14.1.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.25.28"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 98,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
